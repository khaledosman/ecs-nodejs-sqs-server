{
  "name": "ovs-data-importer",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "npx nodemon --inspect server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "npx git-cz",
    "release": "npx semantic-release",
    "commitizen": "exec < /dev/tty && git cz",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "aws-login:dev": "$(aws --profile ovs ecr get-login --no-include-email --region eu-central-1)",
    "aws-login:live": "$(aws --profile ovs ecr get-login --no-include-email --region us-east-1)",
    "build:dev": "docker build --build-arg AWS_STAGE=dev --build-arg SQS_QUEUE_URL=https://sqs.eu-central-1.amazonaws.com/920046484061/ovs-queue-dev -t ovs-data-importer-dev .",
    "build:live": "docker build --build-arg AWS_STAGE=live --build-arg SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/920046484061/ovs-queue-live -t ovs-data-importer-live .",
    "tag:dev": "docker tag ovs-data-importer-dev:latest 920046484061.dkr.ecr.eu-central-1.amazonaws.com/ovs-data-importer-dev:latest",
    "tag:live": "docker tag ovs-data-importer-live:latest 920046484061.dkr.ecr.us-east-1.amazonaws.com/ovs-data-importer-live:latest",
    "deploy:dev": "yarn aws-login:dev && yarn build:dev && yarn tag:dev && docker push 920046484061.dkr.ecr.eu-central-1.amazonaws.com/ovs-data-importer-dev:latest",
    "deploy:live": "yarn aws-login:live && yarn build:live && yarn tag:live && docker push 920046484061.dkr.ecr.us-east-1.amazonaws.com/ovs-data-importer-live:latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/colorfy/ovs-data-importer.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/colorfy/ovs-data-importer#readme",
  "dependencies": {
    "aws-sdk": "^2.536.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/npm": "^5.1.15",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.5",
    "nodemon": "^1.19.2",
    "semantic-release": "^15.13.24"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  }
}
